<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SplashScreenActivity">

    <TextView
        android:id="@+id/splashTitle"
        android:text="@string/app_name"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:background="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/splashMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_200"
        android:background="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/splash_loading_message" />

    <com.tcs.assignmentfour.customview.PercentageInCircleView
        android:id="@+id/percentageInCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:forceHasOverlappingRendering="true"
        app:circleColor="@color/teal_200"
        app:fontColor="@color/black"
        app:fontSize="100dp"
        app:text="100" />

</LinearLayout>