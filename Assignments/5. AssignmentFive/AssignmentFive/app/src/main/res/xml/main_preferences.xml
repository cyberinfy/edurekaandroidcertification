<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <PreferenceCategory android:title="PreferenceCategory EditTextPreference">
        <androidx.preference.EditTextPreference
            android:defaultValue=""
            android:key="PREF_USERNAME"
            android:summary="Contains current username"
            android:title="username preferences" />
    </PreferenceCategory>
    <PreferenceCategory android:title="PreferenceCategory ListPreference">
        <androidx.preference.ListPreference
        android:key="PREF_LIST"
        android:title="ListPreference"
        android:summary="Pick a color for app tint"
        android:entries="@array/listentries"
        android:entryValues="@array/listvalues" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>